.messagebox
  .post-info
    .post-info__name
      = message.user.name
    .post-info__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .post-message
    - if message.content.present?
      %p.Message__content
        = message.content
    = image_tag message.image.url, class: 'form__image' if message.image.present?