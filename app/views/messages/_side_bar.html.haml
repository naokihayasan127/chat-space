.side-bar
  .side-bar__user-name
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icons
        = link_to new_group_path(current_user)do
          = icon('far', 'edit', class: "top-items__icons--btn")
          -# iconの記述の意味がわからない。クラスを作っている。
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: "top-items__icons--btn")

  .side-bar__group-list
    - current_user.groups.each do |group|
      .groups
        = link_to group_messages_path(group) do
          .groups__name
            =group.name
          .groups__message
            =group.show_last_message
          